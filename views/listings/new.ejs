<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vista</title>
</head>
<body>
    <br/>
    <div class="row">
        <div class="col-8 offset-2">
    <h1>Create new</h1>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form label">Enter title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required/>
        </div>
        <div class="mb-3">
            <label for="description" class="form label">Description</label>
        <textarea name="listing[description]" class="form-control"></textarea>
        </div>
        <div class="mb-3">
        <label for="image" class="form label">Image Link</label>
        <input name="listing[image]" placeholder="Enter image url" type="text" class="form-control"/>
        </div>
        <div class="row">
        <div class="mb-3 col-md--4">
            <label for="title" class="form label">Price</label>
        <input name="listing[price]" placeholder="Enter price" type="number" class="form-control"/>
        </div>
        <div class="mb-3 col-md--8">
            <label for="title" class="form label">Location</label>
        <input name="listing[location]" placeholder="Enter location" type="text" class="form-control"/>
        </div>
        </div>
        <div class="mb-3">
            <label for="title" class="form label">Country</label>
        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control"/>
        </div>
        <br />
        <button type="submit" class="btn btn-dark add-btn">Add</button>
        <br />
        <br />
    </form>
    </div>
    </div>
</body>
</html>